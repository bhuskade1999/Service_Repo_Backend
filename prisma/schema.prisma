generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL1")
}

// schema.prisma



// User model for authentication
model User {
  id        Int       @id @default(autoincrement())
  username String
  email    String    @unique
  password String
  tasks    Task[]
}

 

// Task model for task management
model Task {
  id          Int       @id @default(autoincrement())
  currentDay  DateTime
  day         Int
  night       Int?
  user        User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId      Int?
}


